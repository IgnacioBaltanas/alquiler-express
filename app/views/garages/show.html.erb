<main class="max-w-4xl mx-auto px-6 py-10">
  <div class="rounded-2xl shadow bg-white overflow-hidden" style="opacity: 1; transform: none;">
    <%= image_tag rails_blob_path(@garage.pictures.first, disposition: "attachment"), class: 'w-full object-cover h-110' %>

    <div class="p-6">
      <h2 class="text-3xl font-bold text-[#144B7F] mb-2"><%= @garage.name %></h2>
      <p class="text-[#FF6C1E] font-semibold text-xl mb-4"><%= number_to_currency @garage.price %> por noche</p>
      <ul class="flex flex-wrap gap-4 text-sm text-gray-700 mb-6">
        <li class="bg-[#FFD4BA] text-[#333] px-3 py-1 rounded-full">
          <%= @garage.length %>
          m de largo
        </li>
        <li class="bg-[#FFD4BA] text-[#333] px-3 py-1 rounded-full">
          <%= @garage.width %>
          m de ancho
        </li>
      </ul>
      <p class="text-gray-800 leading-relaxed mb-6"><%= @garage.description %></p>

      <% if Current.user.blank? %>
        <%= link_to "Solicitar reserva", new_session_path, class: "inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 [&amp;_svg]:size-4 shadow h-10 py-2 bg-[#FF6C1E] text-white rounded-xl px-6 hover:bg-orange-600" %>
      <% elsif Current.user&.customer? %>
        <%= link_to "Solicitar reserva", new_property_rental_path(@garage), class: "inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 [&amp;_svg]:size-4 shadow h-10 py-2 bg-[#FF6C1E] text-white rounded-xl px-6 hover:bg-orange-600" %>
      <% end %>
    </div>
  </div>
</main>
