<main class="max-w-4xl mx-auto px-6 py-10">
  <div class="rounded-2xl shadow bg-white overflow-hidden" style="opacity: 1; transform: none;">

    <div class="p-6 space-y-8">
      <div class="space-y-2">
        <h2 class="text-3xl font-bold text-[#144B7F] mb-5">
          Detalles de reserva #<%= @rental.id %>
        </h2>
        <p class="font-medium text-[#333]">
          <%= link_to @rental.property.name, living_property_path(@rental.property) %>
        </p>
        <p class="text-[#666]">
          Checkin:
          <span class="font-medium text-[#333]">
            <%=l @rental.start.to_date, format: :day %>
          </span>
        </p>

        <p class="text-[#666]">
          Checkout:
          <span class="font-medium text-[#333]">
            <%=l @rental.end.to_date, format: :day %>
          </span>
        </p>

        <p class="font-medium text-[#333] mt-4">
          Solicitante: <%= @rental.owner.first_name%> <%= @rental.owner.last_name%>
        </p>
        <p class="text-[#666]">
          DNI:
          <span class="font-medium text-[#333]">
            <%= @rental.owner.dni %>
          </span>
        </p>
        <p class="text-[#666]">
          Email:
          <span class="font-medium text-[#333]">
            <%= @rental.owner.email_address %>
          </span>
        </p>
        <p class="text-[#666]">
          Fecha de Nacimiento:
          <span class="font-medium text-[#333]">
            <%=l @rental.owner.dob, format: :long %>
          </span>
        </p>

        <p class="text-lg font-semibold text-[#FF6C1E]">Total: <%= number_to_currency @rental.total_cost %></p>
      </div>

      <% if @rental.property.must_have_guests? %>
        <div>
          <h3 class="text-xl font-semibold text-[#144B7F]">Hu√©spedes</h3>
          <ul class="divide-y divide-gray-200 mt-4">
            <% @rental.users.each do |user| %>
              <li class="py-3">
                <div class="text-sm text-[#333]">
                  <p><strong><%= user.first_name %> <%= user.last_name %></strong></p>
                  <p class="text-[#666]">DNI: <%= user.dni %></p>
                  <p class="text-[#666]">F.d.n.: <%=l user.dob, format: :long %></p>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @rental.requested? %>
        <%= tag.div(flash[:error], style: "color:red") if flash[:error] %>

        <%= button_to "Aceptar solicitud de reserva", accept_admin_rental_path(@rental), method: :patch, class: "inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 [&amp;_svg]:size-4 shadow h-10 py-2 bg-[#FF6C1E] text-white rounded-xl px-6 hover:bg-orange-600" %>
      <% end %>
    </div>
  </div>

</main>
