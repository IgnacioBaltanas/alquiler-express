<section class="px-6 py-8 max-w-4xl mx-auto">
  <div class="flex items-center gap-4">
    <input class="flex h-10 w-full bg-background text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm flex-grow border border-gray-300 rounded-2xl px-4 py-2 shadow-sm"
      placeholder="Buscar...">

    <button class="inline-flex items-center justify-center gap-2  font-medium transition-colors shadow h-9 py-2 bg-[#FF6C1E] text-white rounded-2xl px-6 hover:bg-orange-600">
      <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" class="mr-2" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z">
        </path>
      </svg>
      Buscar
    </button>
  </div>
</section>

<main class="grid grid-cols-1 md:grid-cols-3 gap-6 px-6 pb-12 max-w-6xl mx-auto">
  <% @properties.each do |property| %>
    <div class="rounded-2xl shadow bg-white overflow-hidden">
      <%= link_to property do %>
        <%= image_tag rails_blob_path(property.pictures.first, disposition: "attachment"), class: 'w-full object-cover h-48' %>
      <% end %>

      <div class="p-4">
        <h2 class="text-xl font-semibold text-[#144B7F]"><%= property.name %></h2>
        <p class="text-sm text-gray-600">
          <%= property.bedrooms %> <%= property.bedrooms > 1 ? 'habitaciones' : 'habitaciÃ³n' %>
        </p>
        <p class="text-sm text-gray-600">
          Lugar para <%= property.guest_capacity %> <%= 'persona'.pluralize(property.guest_capacity) %>
        </p>
        <p class="mt-2 text-[#FF6C1E] font-bold">
          $<%= property.price %> por noche
        </p>
      </div>
    </div>
  <% end %>
</main>
