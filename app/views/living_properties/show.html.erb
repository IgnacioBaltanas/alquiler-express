<main class="max-w-4xl mx-auto px-6 py-10">
  <div class="rounded-2xl shadow bg-white overflow-hidden" style="opacity: 1; transform: none;">
    <%= image_tag rails_blob_path(@property.pictures.first, disposition: "attachment"), class: 'w-full object-cover h-110' %>

    <div class="p-6">
      <h2 class="text-3xl font-bold text-[#144B7F] mb-2"><%= @property.name %></h2>
      <p class="text-[#FF6C1E] font-semibold text-xl mb-4">$<%= @property.price %> por noche</p>
      <ul class="flex flex-wrap gap-4 text-sm text-gray-700 mb-6">
        <li class="bg-[#FFD4BA] text-[#333] px-3 py-1 rounded-full"><%= @property.bedrooms %> habitaciones</li>
        <li class="bg-[#FFD4BA] text-[#333] px-3 py-1 rounded-full">Para <%= @property.guest_capacity %> personas</li>
        <li class="bg-[#FFD4BA] text-[#333] px-3 py-1 rounded-full">75 mÂ²</li>
      </ul>
      <p class="text-gray-800 leading-relaxed"><%= @property.description %></p>
    </div>
  </div>
</main>
